
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check roles
    function isDeveloper(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.email == 'thimira.vishwa2003@gmail.com';
    }
    
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    function isPrivilegedUser(userId) {
        return request.auth != null && (isDeveloper(userId) || isAdmin(userId));
    }

    // Allow public read access to all files.
    // This is necessary for website visitors to see project and event images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow writes (uploads/deletes) only for authenticated admins and developers
    // inside the specified folders.
    match /projects/{allPaths=**} {
      allow write: if isPrivilegedUser(request.auth.uid);
    }
    
    match /directorEvents/{allPaths=**} {
       allow write: if isPrivilegedUser(request.auth.uid);
    }

    match /ongoingProjects/{allPaths=**} {
      allow write: if isPrivilegedUser(request.auth.uid);
    }

    match /homeProducts/{allPaths=**} {
      allow write: if isPrivilegedUser(request.auth.uid);
    }

    match /properties/{allPaths=**} {
      allow write: if isPrivilegedUser(request.auth.uid) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent';
    }

    match /pantryDesigns/{allPaths=**} {
      allow write: if isPrivilegedUser(request.auth.uid);
    }

    // Allow authenticated users to upload to their own submission folders
    match /propertySubmissions/{userId}/{allPaths=**} {
      allow write: if request.auth.uid == userId;
    }

    match /chatFiles/{chatId}/{allPaths=**} {
      allow write: if request.auth != null; // Simple rule: any authenticated user can upload to chats. Could be tightened.
    }
  }
}
